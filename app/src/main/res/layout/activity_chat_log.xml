<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<!--    contexto-->

<include layout="@layout/activity_menu_chat"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_chat_log"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/edittext_chat_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/Branco"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="200dp">
        //terminar
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edittext_chat_log"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="@+id/recyclerview_chat_log"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Enter Message"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/send_button_chat_log"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="680dp"/>
 //gambiarra (tirar depois)

    <Button
        android:id="@+id/send_button_chat_log"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/recyclerview_chat_log"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/edittext_chat_log"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/edittext_chat_log" />
</RelativeLayout>