<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<!--    contexto-->

    <include
        layout="@layout/activity_menu_chat"
        android:layout_width="match_parent"
        android:layout_height="81dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_chat_log"
        android:layout_width="match_parent"
        android:layout_height="584dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:backgroundTint="@color/Branco"
        app:layout_constraintBottom_toTopOf="@+id/edittext_chat_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="#223263">

        <ImageButton
            android:id="@+id/send_button_chat_log"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/recyclerview_chat_log"
            android:layout_marginStart="370dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/edittext_chat_log"
            app:srcCompat="@drawable/send"
            android:backgroundTint="#223263"
            android:layout_marginTop="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="19dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:text="Digite uma mensagem..."
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>