<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:id="@+id/serach_View"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:background="@drawable/searchview_menu_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/id_filter"
            android:layout_marginLeft="50dp"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/filter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/serach_View"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="50dp"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/id_order"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/serach_View"
            android:layout_toRightOf="@+id/serach_View"
            android:src="@drawable/ordenar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_filter"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_result_premium"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/id_number_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0 Resultados"
            android:textColor="@color/Secundária"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_text_premium"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Premium"
            android:textColor="@color/Secundária"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/Primaria">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho1"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho3"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho4"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/id_nicho5"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@color/Branco"
                    app:srcCompat="@drawable/cano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Encanador"
                    android:textColor="@color/Preto" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewListagem"
        android:layout_width="match_parent"
        android:layout_height="501dp" />


</LinearLayout>
